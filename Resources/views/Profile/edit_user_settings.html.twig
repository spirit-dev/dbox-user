<form class="form-horizontal" action="{{ path('spirit_dev_dbox_user_profile_settings') }}" {{ form_enctype(form) }}
      method="POST">

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label class="control-label">
                    {{ form_widget(form.skip_intro) }} <strong>{{ 'profile.settings.skip_intro'|trans }}</strong>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            {{ form_widget(form.save) }}
        </div>
    </div>

    {{ form_end(form) }}

</form>
