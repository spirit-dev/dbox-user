<form class="form-horizontal" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }}
      method="POST">

    {#<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />#}
    {{ form_widget(form._token) }}

    <div class="form-group">
        {{ form_label(form.new.first, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.new.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.new.second, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.new.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
            <input class="btn btn-primary pull-left" type="submit"
                   value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}"/>
        </div>
    </div>
</form>
